@model IEnumerable<CatalogoPrueba.Models.ClienteModel>


@{
    ViewBag.Title = "Lista de Clientes";
}

<div id="myModal" class="modal fade" tabindex="-1" role="dialog" arial-labelledby="myModalLabel" aria-fidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dissmiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title" id="myModalLabel">Contactos</h4>

            </div>
            <div class="modal-body">
                <div id="modal-content">
                    Cargando...

                </div>

            </div>

        </div>

    </div>
</div>
<h2>Lista de Clientes</h2>

<p>
    @Html.ActionLink("Nuevo contacto", "Create")
</p>

<div>

</div>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6">
            <div class="input-group">
                <span class="input-group-btn">

                    <a class="btnBuscarRazon btn btn-default" data-razon="Razon">Buscar</a>

                </span>
                <input type="text" class="Razon form-control" placeholder="Razon Social" maxlength="50" id="Razon" data-id="" />
            </div>
        </div>

    </div>


}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model._id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Razon_social)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_comercial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RFC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CURP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.direccion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item._id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Razon_social)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_comercial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RFC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CURP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item._id }) |
                <a href="#myModal" class="btnContactos" data-toggle="modal" data-id="@item._id">
                    Contactos
                </a>|
                @*@Html.ActionLink("Contactos", "Details", new { id = item._id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item._id })
            </td>
        </tr>
    }

</table>


@section scripts
    {

    <script src="~/Scripts/Contactos/Contactos.js"></script>
}
